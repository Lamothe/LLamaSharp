        <div class="d-flex justify-content-between entry-header">
            <div class="d-flex justify-content-start">
                 <div class="participant">
                    <span class="participant-icon">
                        <i class="bi bi-diagram-3"></i>
                    </span>
                    <span class="participant-name">{{modelName}}</span>
                </div>
            </div>
            <div class="entry-date date"></div>
        </div>
        <div class="content"><img src="~/image/loading.gif" width="30" /></div>
        <div class="signature"></div>
    </div>
