<script id="outputErrorTemplate" type="text/html">
    <div class="text-bg-danger m-2 px-3 py-2">{{text}}</div>
</script>

<script id="outputInfoTemplate" type="text/html">
    <div class="entry">
        <div class="d-flex justify-content-between entry-header">
            <div class="participant">
                <span class="participant-icon">
                    <i class="bi bi-person"></i>
                </span>
                <span class="participant-name">LLamaSharp</span>
            </div>
            <div class="entry-date">{{date}}</div>
        </div>
        <div class="content">{{text}}</div>
    </div>
</script>

